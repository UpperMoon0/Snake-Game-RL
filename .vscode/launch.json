{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Train Model",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}",
            "args": [
                "train",
                "--episodes", "5000",
                "--ai_number", "4",
                "--continue_training"
            ]
        },
        {
            "name": "Python: Play/Watch Game",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}",
            "args": [
                "play",
                // "--player", // Uncomment to play as a human
                "--ai_number", "4"
            ]
        }
    ]
}
